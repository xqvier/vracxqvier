<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content">
		<Spinner android:id="@+id/minuteSpinner" android:layout_width="wrap_content"
			android:layout_height="match_parent" android:layout_weight="1" />
		<Spinner android:id="@+id/secondSpinner" android:layout_width="wrap_content"
			android:layout_height="match_parent" android:layout_weight="1" />
	</LinearLayout>
	<Button android:id="@+id/selectBeepButton" android:text="@string/select_beep_button"
		android:textColor="#000000" android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<Button android:id="@+id/startButton" android:text="@string/start_button"
		android:textColor="#FFFFFF" android:layout_width="match_parent"
		android:layout_height="wrap_content" />
</LinearLayout>