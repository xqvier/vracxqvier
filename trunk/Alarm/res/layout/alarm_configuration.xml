<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent">
		<TextView android:id="@+id/exerciseText" android:text="@string/exercise"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" android:layout_height="wrap_content">
			<Spinner android:id="@+id/minuteExerciseSpinner"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:layout_weight="1" />
			<Spinner android:id="@+id/secondExerciseSpinner"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:layout_weight="1" />
		</LinearLayout>
		<TextView android:id="@+id/recoveryText" android:text="@string/recovery"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" android:layout_height="wrap_content">
			<Spinner android:id="@+id/minuteRecoverySpinner"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:layout_weight="1" />
			<Spinner android:id="@+id/secondRecoverySpinner"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:layout_weight="1" />
		</LinearLayout>
		<TextView android:id="@+id/delayText" android:text="@string/delay"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" android:layout_height="wrap_content">
			<Spinner android:id="@+id/minuteDelaySpinner"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:layout_weight="1" />
			<Spinner android:id="@+id/secondDelaySpinner"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:layout_weight="1" />
		</LinearLayout>
		<Button android:id="@+id/selectBeepButton" android:text="@string/select_beep_button"
			android:textColor="#000000" android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<Button android:id="@+id/startButton" android:text="@string/start_button"
			android:layout_width="match_parent" android:layout_height="wrap_content" />
		<Button android:id="@+id/alarmStatButton" android:text="@string/stats_button"
			android:layout_width="match_parent" android:layout_height="wrap_content" />
	</LinearLayout>
</ScrollView>